      font-size: 16px;
    }

    #shopify-section-{{ section.id }} .sidebar-content__main {
      order: 1;
    }

    #shopify-section-{{ section.id }} .sidebar-content__sidebar {
      order: 2;
    }

    #shopify-section-{{ section.id }} .two-col {
      flex-direction: column;
    }

    #shopify-section-{{ section.id }} .two-col img,
    #shopify-section-{{ section.id }} .two-col-rev img {
      flex: 0 0 100%;
      max-width: 100%;
      margin: 0 0 15px 0;
    }

    #shopify-section-{{ section.id }} .two-col-rev {
      flex-direction: column;
    }

    #shopify-section-{{ section.id }} .order-button {
      max-width: 100%;
    }

    #shopify-section-{{ section.id }} .orange_box {
      font-size: 16px;
      line-height: 24px;
      padding: 10px 15px;
    }

    #shopify-section-{{ section.id }} .sidebar-review em {
      font-size: 15px;
    }

    #shopify-section-{{ section.id }} .sticky-banner {
      position: static;
      margin-top: 20px;
    }

    #shopify-section-{{ section.id }} .sticky-banner .order-button {
      max-width: 100%;
    }

    {% if section.settings.sidebar_sticky %}
      #shopify-section-{{ section.id }} .sidebar-content__sidebar {
        position: static;
      }

      #shopify-section-{{ section.id }} .sticky-banner {
        position: static;
      }
    {% endif %}

    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{% endstyle %}

