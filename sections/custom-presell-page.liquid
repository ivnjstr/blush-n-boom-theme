    padding: 4px 0;
    background: #EBF5F1;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  #shopify-section-{{ section.id }} .gr-box .head {
    background: #359B76;
    padding: 10px 20px;
  }

  #shopify-section-{{ section.id }} .gr-box .head p {
    margin: 0;
    color: #fff;
  }

  #shopify-section-{{ section.id }} .gr-box .gr-list {
    margin: 16px;
    padding: 0;
    list-style: none;
  }

  #shopify-section-{{ section.id }} .gr-box .gr-list li {
    position: relative;
    padding-left: 35px;
  }

  #shopify-section-{{ section.id }} .gr-box .gr-list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    top: 6px;
    width: 25px;
    height: 24px;
    color: #359B76;
    font-size: 20px;
    font-weight: bold;
  }

  #shopify-section-{{ section.id }} .gr-box .gr-list li p {
    margin-bottom: 20px;
  }

  /* Reader Reviews */
  #shopify-section-{{ section.id }} .reader-box {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    align-items: flex-start;
    padding: 15px;
    background: #EBF5F1;
  }

  #shopify-section-{{ section.id }} .reader-box img {
    margin: 0;
  }

  #shopify-section-{{ section.id }} .reader-box .reader {
    width: 250px ;
    height: 250px;
    /* border-radius: 50%; */
    flex-shrink: 0;
    margin: 0;

    @media only screen and (max-width: 768px) {
      width: 100px;
      height: 100px;
    }
  }

  #shopify-section-{{ section.id }} .reader-box .right {
    flex: 1;
  }

  #shopify-section-{{ section.id }} .reader-box-pr {
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
  }

  #shopify-section-{{ section.id }} .reader-box-pr1 {
    font-size: 14px;
    margin: 0;
    display: flex;
    justify-content: space-between;
  }

  #shopify-section-{{ section.id }} .rating-star {
    width: 100px !important;
    height: 16px !important;
    display: inline-block;
    margin-left: 5px;
  }

  /* Orange Box Alert */
  #shopify-section-{{ section.id }} .orange_box {
    font-size: 20px;
    line-height: 28px;
    color: #000;
    background: #FCECF5;
    margin-bottom: 15px;
    border-left: 20px solid #E4469D;
    padding: 10px 25px;
  }

  #shopify-section-{{ section.id }} .orange_box a {
    font-weight: bold;
    color: #045BE8;
    text-decoration: underline;
  }

  /* Sidebar Styles */
  #shopify-section-{{ section.id }} .sidebar-reviews h2 {
    margin-bottom: 10px;
    font-size: 20px;
  }

  #shopify-section-{{ section.id }} .sidebar-link {
    height: 1px;
    background: #359B76;
    margin: 20px 0;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .sidebar-review {
    margin-bottom: 30px;
  }

  #shopify-section-{{ section.id }} .sidebar-review img {
    max-width: 100%;
    margin: 15px auto;
    display: block;
  }

  #shopify-section-{{ section.id }} .sidebar-review p {
    margin-bottom: 10px;
  }

  #shopify-section-{{ section.id }} .sidebar-review em {
    color: #000;
    font-size: 17px;
    font-style: italic;
    display: block;
    margin-bottom: 10px;
    font-weight: 300;
  }

  #shopify-section-{{ section.id }} .sidebar-review strong {
    font-weight: 600;
  }

  /* Sticky Product Banner */
  #shopify-section-{{ section.id }} .sticky-banner {
    background: #fff;
    padding: 20px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-top: 30px;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .sticky-banner img {
    max-width: 250px;
    width: 100%;
    margin: 0 auto 15px;
    display: block;
  }

  #shopify-section-{{ section.id }} .sticky-banner h2 {
    margin-bottom: 10px;
    font-size: 18px;
  }

  #shopify-section-{{ section.id }} .sticky-banner h2 a {
    font-weight: bold;
    color: #045BE8;
    text-decoration: underline !important;
  }

  #shopify-section-{{ section.id }} .sticky-banner h2 a:hover {
    text-decoration: underline;
  }

  #shopify-section-{{ section.id }} .sticky-banner p {
    margin-bottom: 15px;
    font-size: 16px;
  }

  #shopify-section-{{ section.id }} .sticky-banner .order-button {
    max-width: 230px;
    margin: 20px auto;
    display: block;
  }

  #shopify-section-{{ section.id }} .sticky-flag {
    height: 1px;
    visibility: hidden;
  }

  {% if section.settings.sidebar_sticky %}
    #shopify-section-{{ section.id }} .sidebar-content__sidebar {
      position: sticky;
      top: {{ section.settings.sticky_offset }}px;
      align-self: flex-start;
    }

    #shopify-section-{{ section.id }} .sticky-banner {
      position: sticky;
      top: {{ section.settings.sticky_offset }}px;
    }
  {% endif %}

  #shopify-section-{{ section.id }} .d-mobile-hide-desktop {
    display: none !important;
    @media only screen and (max-width: 768px) {
      display: block !important;
    }
  }

  #shopify-section-{{ section.id }} .d-desktop-hide-mobile {
    display: block !important;
    @media only screen and (max-width: 768px) {
      display: none !important;
    }
  }

  #shopify-section-{{ section.id }} .sidebar-header {
    width: 99.5vw;
    margin-left: calc(50% - 50vw);
    padding: 15px 0;
    text-align: center;
    background-color: #fff;
    position: relative;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }

  #shopify-section-{{ section.id }} .sidebar-header__logo {
    max-width: 80px;
    height: auto;
    margin: 0 auto;
    display: block;
  }

  #shopify-section-{{ section.id }} .sidebar-footer {
    width: 99vw;
    margin-left: calc(50% - 50vw);
    margin-top: 40px;
    padding: 20px 0;
    text-align: center;
    background-color: #f9f9f9;
    position: relative;
    /* box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1); */
    border-top: 1px solid #e0e0e0;
  }

  #shopify-section-{{ section.id }} .sidebar-footer__copyright {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  @media only screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .sidebar-content-wrapper {
      flex-direction: column;
      padding: 0 10px;
    }

    #shopify-section-{{ section.id }} .sidebar-content__sidebar,
    #shopify-section-{{ section.id }} .sidebar-content__main {
      flex: 0 0 100%;
    }

    #shopify-section-{{ section.id }} .sidebar-content__sidebar p,
