  #shopify-section-{{ section.id }} .sidebar-content__sidebar h2,
  #shopify-section-{{ section.id }} .sidebar-content__sidebar h3,
  #shopify-section-{{ section.id }} .sidebar-content__sidebar h4,
  #shopify-section-{{ section.id }} .sidebar-content__main h1,
  #shopify-section-{{ section.id }} .sidebar-content__main h2,
  #shopify-section-{{ section.id }} .sidebar-content__main h3,
  #shopify-section-{{ section.id }} .sidebar-content__main h4 {
    margin-top: 0;
    margin-bottom: 15px;
  }

  #shopify-section-{{ section.id }} .sidebar-content__sidebar p,
  #shopify-section-{{ section.id }} .sidebar-content__main p {
    margin-bottom: 15px;
    font-size: 18px;
  }

  /* Article Styles */
  #shopify-section-{{ section.id }} .article-advertisement {
    font-size: 14px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
  }

  #shopify-section-{{ section.id }} .article-author {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 30px;
  }

  #shopify-section-{{ section.id }} .article-author img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .article-author-content {
    display: flex;
    flex-direction: column;
  }

  #shopify-section-{{ section.id }} .article-author-name {
    font-weight: 600;
    color: #359B76 !important;
    /* margin-bottom: 5px; */
  }

  #shopify-section-{{ section.id }} .article-author-date {
    font-size: 14px;
    color: #666;
  }

  #shopify-section-{{ section.id }} .article-highlight-box {
    background: #FCECF5;
    padding: 16px;
    margin-bottom: 20px;
  }

  #shopify-section-{{ section.id }} .article-highlight-box p {
    margin: 0;
  }

  /* Two Column Layout */
