<script
  type="application/json"
  data-section-type="sidebar-content"
  data-section-id="{{ section.id }}"
></script>

{% style %}

  [role="dialog"] {
    display: none;
  }

  .order-button {
    font-size: 20px;
  }

  .order-button:hover {
    transform: translateY(-2px);
    transition: transform 0.3s ease;
  }

  aside .order-button {
    font-size: 14px !important;
  }
  
  .shopify-section,
  .section-wrapper {
    margin-top: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }

  .main-nav__wrapper,
  footer,
  header {
    display: none !important;
  }

  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  }

  #shopify-section-{{ section.id }} .sidebar-content-wrapper {
    display: flex;
    gap: {{ section.settings.gap }}px;
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    /* padding: 0 20px; */
    {% if section.settings.sidebar_position == 'right' %}
      flex-direction: row-reverse;
    {% endif %}
  }

  #shopify-section-{{ section.id }} .sidebar-content__sidebar {
    /* flex: 0 0 25%; */
    min-width: 0;
  }

  #shopify-section-{{ section.id }} .sidebar-content__main {
    flex: 0 0 75%;
    min-width: 0;
  }

  #shopify-section-{{ section.id }} .sidebar-content__sidebar,
  #shopify-section-{{ section.id }} .sidebar-content__main {
    color: #333;
    line-height: 1.7;
  }

  #shopify-section-{{ section.id }} .sidebar-content__sidebar img,
  #shopify-section-{{ section.id }} .sidebar-content__main img {
    width: 100%;
    height: auto;
    display: block;
    margin: 20px 0;
  }

  #shopify-section-{{ section.id }} .smb-main-img {
    width: 100%;
    height: auto;
    display: block;
    margin: 20px 0;
  }

  .main-content__static h1 {
    font-size: 42px;
    font-weight: 600;
    text-transform: capitalize;

    @media only screen and (max-width: 768px) {
      font-size: 24px;
    }
  }

