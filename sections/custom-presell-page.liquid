    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin: 20px 0;
  }

  #shopify-section-{{ section.id }} .two-col img {
    flex: 0 0 234px;
    max-width: 234px;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .two-col .right {
    flex: 1;
  }
  
  h3 {
    color: #359B76;
    text-transform: capitalize;
    font-size: 28px !important;

    @media only screen and (max-width: 768px) {
      font-size: 22px !important;
    }
  }

  #shopify-section-{{ section.id }} .two-col .right h3 {
    margin-top: 0;

  }

  #shopify-section-{{ section.id }} .two-col-rev {
    flex-direction: row-reverse;
  }

  #shopify-section-{{ section.id }} .two-col-rev img {
    /* margin-left: 20px; */
    margin-right: 0;
  }

  /* Pink Box CTA */
