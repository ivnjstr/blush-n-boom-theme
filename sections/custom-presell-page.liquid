    padding: 32px 16px;
    background: #FAF4FC;
    border: 1px solid #E4469D;
    margin-bottom: 20px;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .pink-box h3 {
    color: #262626;
    margin-top: 0;
    font-weight: 600;
  }

  #shopify-section-{{ section.id }} .cta-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20px auto;
    gap: 8px;
  }

  #shopify-section-{{ section.id }} .order-button {
    max-width: 400px;
    width: 100%;
    box-sizing: border-box;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .cta-subhead {
    font-size: 14px;
    margin: 0 !important;
    color: #d5647c;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .risk-out {
    font-size: 18px;
    color: #666;
  }

  /* Green Box Ingredients */
